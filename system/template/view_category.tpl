[[-view_category]]
<div id="category_block_container_[[*id]]" class="block_container category_block_container[[*extra_classes]]">
    <div class="block_thumb_container">
        <div class="block_thumb_image_container" style="background-image: url([[$image]]);"></div>
        <div class="block_thumb_content_container">
            <div class="block_thumb_content"><h3 class="block_thumb_title">[[*page_title]]</h3></div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="block_cover_over_link_container">
        <a href="[[&namespace]][[&path]][[*friendly_url]]" title="[[*page_title]]" class="block_thumb_cover_over_link"></a>
    </div>
</div>