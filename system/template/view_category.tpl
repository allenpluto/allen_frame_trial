[[-view_category]]
<div id="category_block_container_[[*id]]" class="block_container category_block_container[[*extra_classes]]">
    <div class="block_thumb_container">
        [[$image]]
    </div>
    <div class="block_content_container">
        <h3 class="block_content_title">[[*name]]</h3>
        <div class="block_content_detail_icon"></div>
    </div>
    <div class="clear"></div>
    <div class="block_cover_over_link_container">
        <a href="[[&namespace]][[*friendly_url]]" title="[[*name]]" class="block_thumb_cover_over_link"></a>
    </div>
</div>